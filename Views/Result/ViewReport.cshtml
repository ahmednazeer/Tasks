<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-2"></div>
        <div class="col-lg-2 ">
            <img src="~/Content/Images/logo.png" />
        </div>
        <div class="col-lg-3 col-lg-offset-3 text-center"> <h3>Healthcare Professional Solutions</h3> </div>
        <div class="col-lg-2"></div>

    </div>

</div>

<div style="width:100%;height:2px;background-color:black ;margin-bottom:20px;"></div>
<div class="row">
    <table class="col-lg-12 table table-condensed table-bordered" style="margin-bottom:20px;">
        <tr>
            <td><label>Name :</label></td>
            <td class="text-center"><label>@Model.Patient.UserName</label></td>

            <td><label>Age :</label></td>
            @{
                var year = DateTime.Now.Year - Model.Patient.BirthDate.Year;
                <td class="text-center"><label>@year Y</label></td>
            }
        </tr>
        <tr>
            <td><label>Examination Date :</label></td>
            <td class="text-center"><label>@Model.ExaminationDate</label></td>
            <td><label>Phone Number : </label></td>
            <td class="text-center"><label>@Model.Patient.PhoneNumber </label></td>

        </tr>
    </table>
</div>

<div class="row">
    <div class="col-lg-12 text-center">Report</div>
    <table class="col-lg-12 table table-bordered ">
        <tr>
            <th>Test</th>
            <th>Result</th>
        </tr>
        <tr>
            <td>@Model.Disease</td>
            <td>@Model.Description</td>
        </tr>
    </table>
    <div class="col-lg-12 text-right" style=" margin-top:300px;margin-bottom:30px;">
        <p>Signature ( .................................................. )</p>

    </div>

    <div class="col-lg-12" style="background-color:black;height:2px;margin-top:20px;">
        @if (Model.PrintDate != null)
        {
            <label>Print date : @DateTime.Now</label>
        }
    </div>
</div>



